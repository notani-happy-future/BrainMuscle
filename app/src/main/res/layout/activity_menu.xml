<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="タイトル領域"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数字"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="現在レベル:"></TextView>
            <TextView
                android:id="@+id/tv_current_level_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""></TextView>

            <TextView
                android:id="@+id/tv_current_level_number_of_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="invisible"></TextView>
            <ImageView
                android:id="@+id/iv_start_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="数字"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_action_forward"
                app:layout_collapseMode="parallax" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="アルファベット"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="現在レベル:"></TextView>
            <TextView
                android:id="@+id/tv_current_level_alphabet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""></TextView>
            <TextView
                android:id="@+id/tv_current_level_alphabet_of_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="invisible"></TextView>
            <ImageView
                android:id="@+id/iv_start_alphabet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="数字"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_action_forward"
                app:layout_collapseMode="parallax" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="色"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="現在レベル:"></TextView>
            <TextView
                android:id="@+id/tv_current_level_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""></TextView>
            <TextView
                android:id="@+id/tv_current_level_color_of_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="invisible"></TextView>
            <ImageView
                android:id="@+id/iv_start_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="数字"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_action_forward"
                app:layout_collapseMode="parallax" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="記号:"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="現在レベル:"></TextView>
            <TextView
                android:id="@+id/tv_current_level_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""></TextView>
            <TextView
                android:id="@+id/tv_current_level_symbol_of_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="invisible"></TextView>
            <ImageView
                android:id="@+id/iv_start_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="数字"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_action_forward"
                app:layout_collapseMode="parallax" />
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>